<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false">

    <RadioGroup
        android:id="@+id/type_buttons_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/type_buttons_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/type_default"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:textSize="12sp"
                android:text="@string/default_title"
                android:textOn="@null"
                android:textOff="@null"
                android:onClick="onToggle"
                style="@style/ToggleButtonStyle" />

            <ToggleButton
                android:id="@+id/type_big_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:textSize="12sp"
                android:text="@string/big_text_title"
                android:textOn="@null"
                android:textOff="@null"
                android:onClick="onToggle"
                style="@style/ToggleButtonStyle" />

            <ToggleButton
                android:id="@+id/type_big_picture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:textSize="12sp"
                android:text="@string/big_picture_title"
                android:textOn="@null"
                android:textOff="@null"
                android:onClick="onToggle"
                style="@style/ToggleButtonStyle" />

            <ToggleButton
                android:id="@+id/type_inbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:textSize="12sp"
                android:text="@string/inbox_title"
                android:textOn="@null"
                android:textOff="@null"
                android:onClick="onToggle"
                style="@style/ToggleButtonStyle" />

            <ToggleButton
                android:id="@+id/type_messaging"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:textSize="12sp"
                android:text="@string/messaging_title"
                android:textOn="@null"
                android:textOff="@null"
                android:onClick="onToggle"
                style="@style/ToggleButtonStyle" />

            <ToggleButton
                android:id="@+id/type_media"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:textSize="12sp"
                android:text="@string/media_title"
                android:textOn="@null"
                android:textOff="@null"
                android:onClick="onToggle" />

        </LinearLayout>
    </RadioGroup>

    <LinearLayout
        android:id="@+id/priority_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/type_buttons_group"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <Switch
            android:id="@+id/set_priority_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_priority_title" />

        <RadioGroup
            android:id="@+id/priority_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/priority_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/priority_min_title" />

            <RadioButton
                android:id="@+id/priority_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/priority_low_title" />

            <RadioButton
                android:id="@+id/priority_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/priority_default_title" />

            <RadioButton
                android:id="@+id/priority_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/priority_high_title" />

            <RadioButton
                android:id="@+id/priority_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/priority_max_title" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/action_buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/priority_button_layout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <Switch
            android:id="@+id/show_action_buttons_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/show_action_buttons_title" />

        <RadioGroup
            android:id="@+id/number_of_actions_buttons_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/action_buttons_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/one" />

            <RadioButton
                android:id="@+id/action_buttons_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/two" />

            <RadioButton
                android:id="@+id/action_buttons_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/three" />
        </RadioGroup>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/floating_action_button_container"
        android:layout_width="@dimen/floating_action_button_width"
        android:layout_height="@dimen/floating_action_button_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/floating_action_button_bg"
        android:elevation="@dimen/floating_action_button_elevation">

        <ImageButton
            android:id="@+id/floating_action_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:background="@drawable/ripple_drawable_oval"
            android:src="@drawable/ic_send"
            android:scaleType="center" />

    </FrameLayout>
</RelativeLayout>
